﻿@model IEnumerable<WebApplication1.Context.Product>

@{
    ViewBag.Title = "ProductCategory";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>ProductCategory</h2>

@foreach (var item in Model)
{
    <article class="card card-product-list" style="margin-top:100px">
        <div class="row no-gutters">
            <aside class="col-md-3">
                <a href="@Url.Action("Detail", "Product", new { Id =item.id })" class="img-wrap">
                    <span class="badge badge-danger"> NEW </span>
                    <img style="height:300px;width:300px" src="~/Controllers/images/@item.avatar">
                </a>
            </aside> <!-- col.// -->
            <div class="col-md-6">
                <div class="info-main">
                    <a href="@Url.Action("Detail", "Product", new { Id =item.id })" class="h5 title">@item.name</a>
                    <div class="rating-wrap mb-2">
                        <ul class="rating-stars">
                           
                        </ul>
                        <div class="label-rating">9/10</div>
                    </div>


                    <p>
                        @item.mota
                    </p>
                    <p>
                        @item.price
                    </p>
                </div>
            </div>
            <aside class="col-sm-3">
                <div class="info-aside">
                    <div class="price-wrap">
                        <span class="h5 price">@item.price <sup>đ</sup></span>
                        <small class="text-muted">/sản phẩm</small>
                    </div>
                    <small class="text-warning">Phí vận chuyển</small>

                    <p class="mt-3">
                        <a href="#" class="btn btn-outline-primary"> <i class="fa fa-envelope"></i> Liên hệ với nhà cung cấp </a>
                        <a href="#" class="btn btn-light"><i class="fa fa-heart"></i> Lưu </a>
                    </p>



                </div>
            </aside>
        </div>
    </article>
}